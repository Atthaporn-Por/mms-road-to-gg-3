{
    "parser": "babel-eslint",
    # "extends": "airbnb",
    "extends": [
      "standard",
      "standard-react"
    ],
    "plugins": [
        "react",
        "jsx-a11y",
        "import",
        "react-native",
        "babel",
        "react",
        "promise"
    ],
    "globals": {
      "__DEV__"      : false,
      "__TEST__"     : false,
      "__PROD__"     : false,
      "__COVERAGE__" : false
    },
    "rules": {
        "no-underscore-dangle": "off",
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "key-spacing"          : 0,
        "jsx-quotes"           : [2, "prefer-single"],
        # "max-len"              : [2, 120, 2],
        "object-curly-spacing" : [2, "always"]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".android.js", ".ios.js"]
            }
        }
    }
}
